{
  "name": "css-shortener",
  "description": "Utility to shorten css class names",
  "version": "3.0.0-alpha.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbrandau/css-shortener.git"
  },
  "keywords": [
    "css",
    "short",
    "class",
    "name",
    "shorten"
  ],
  "author": "Maximilian Brandau",
  "bugs": {
    "url": "https://github.com/mbrandau/css-shortener/issues"
  },
  "homepage": "https://github.com/mbrandau/css-shortener#readme",
  "module": "dist/tsdx.esm.js",
  "size-limit": [
    {
      "path": "dist/css-shortener.cjs.production.min.js",
      "limit": "1 KB"
    },
    {
      "path": "dist/css-shortener.esm.js",
      "limit": "1 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "husky": "^7.0.4",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2"
  }
}
